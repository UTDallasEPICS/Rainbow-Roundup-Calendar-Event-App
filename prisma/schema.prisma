datasource db {
  provider = "sqlite"
  url      = env("PRISMA_DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  firstname     String
  lastname      String
  role          Role      @default(USER)
  phoneNum      String?   @unique // client requested phone numbers are unique
  profilePic    String    @default("/default-profile.png")
  emailNotif    Boolean   @default(false)       // Notification setting for emails
  nativeNotif   Boolean   @default(false)
  emailVerified DateTime?

  isArchived Boolean    @default(false)
  isBanned    Boolean   @default(false)

  SignUps           SignUp[]
  Notification      Notification[]
  CreatedEvents     Event[]
  
  // Report relations
  Reports           Report[] @relation("ReporterUser")       // Reports this user has made
  PotentialOffenses Report[] @relation("ReportedUser")       // Reports this user has received
  Orders            Order[]
}

model Notification {
  id              String   @id @default(uuid())
  userId          String   @default("none") // prisma kept complaining about a default value
  endpoint        String   @unique// Endpoint url to push notifications to
  auth            String
  p256dh          String
  User  User  @relation(fields: [userId], references: [id])
}

model Event {
  id              String   @id
  title           String
  description     String
  userId          String // References Admin who created the event
  eventLat        Float?
  eventLong       Float?
  location        String?
  startTime       DateTime // Datetime, includes date and time
  endTime         DateTime
  capacity        Int?
  currentCapacity Int?
  isArchived    Boolean   @default(false)

  //Foreign Keys
  User User @relation(fields: [userId], references: [id])

  // Relation to SignUps
  SignUps          SignUp[]
}

model SignUp {
  id            String  @id @default(uuid())
  userId        String
  eventId       String
  Notifications Boolean
  plusOneKids       Int     @default(0)
  plusOneAdults       Int     @default(0)


  // Foreign keys to User and Event
  User  User  @relation(fields: [userId], references: [id])
  Event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId]) // Ensure a unique pair of user-event sign-ups
}

model Report {
  id             String   @id @default(uuid())
  reportedUserId String //account being reported
  reporterUserId String //account making report
  isUsername     Boolean // is the report username related
  isProfilePic   Boolean // is the report profilePic related
  isOther        Boolean // is something else
  description    String?
  reportTime     DateTime @default(now())

  isArchived    Boolean   @default(false)

  // Foreign Keys
  ReportedUser User @relation("ReportedUser", fields: [reportedUserId], references: [id])
  ReporterUser User @relation("ReporterUser", fields: [reporterUserId], references: [id])
}

model ItemVariant {
  id                String     @id @default(uuid())
  size              Size
  itemId            String      
  item              AbstractItem        @relation(fields: [itemId], references: [id])
  availability       Boolean    @default(false) //For admin to enable

  OrderItems OrderItem[]
}

model AbstractItem {
  id                String      @id @default(uuid())
  name              String   
  price             Float
  description       String
  
  isArchived    Boolean   @default(false)  

  ItemVariants     ItemVariant[]
  ItemPhotos         ItemPhoto[]
}

model ItemPhoto {
  id           String     @id @default(uuid())
  url          String   
  itemId       String

  Item         AbstractItem       @relation(fields: [itemId], references: [id])
}

model Order {
  id              String        @id @default(uuid())
  userId          String
  status          OrderStatus   
  paymentInfo     String?
  placedAt        DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  User            User          @relation(fields: [userId], references: [id])
  OrderItems      OrderItem[]
}

model OrderItem {
  id             String         @id @default(uuid())
  orderId        String
  itemVariantId  String  
  
  Order          Order       @relation(fields: [orderId], references: [id])
  ItemVariants ItemVariant @relation(fields:[itemVariantId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PendingUser {
  id         String   @id @default(uuid())
  email      String   @unique
  firstname  String
  lastname   String
  phoneNum   String?  @unique // client requested phone numbers are unique
  profilePic String   @default("/default-profile.png") 
  token      String   @unique
  expires    DateTime @default(now())
}

enum Role {
  USER
  ADMIN
  SUPER
}

enum OrderStatus {
  UNCONFIRMED
  CONFIRMED 
  PAID 
  DELIVERED
}

enum Fit {
  M
  F
  U
}

enum Size {
  XXS
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}